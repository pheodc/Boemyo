<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

        <ImageView
            android:id="@+id/iv_img_produto_categoria"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/back_add_foto"
            ></ImageView>
        <TableLayout

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="3dp"
            android:background="@color/color_black_transparent"
            android:layout_alignBottom="@+id/iv_img_produto_categoria"
            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_nome_categoria_lista"
                    android:textSize="20sp"
                    android:text="Categoria"
                    android:paddingLeft="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:layout_marginBottom="10dp"
                    >
                </TextView>

        </TableLayout>

</RelativeLayout>