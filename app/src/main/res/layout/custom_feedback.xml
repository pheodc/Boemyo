<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title_sair"
        android:text="Antes de Partir..."
        android:textColor="@color/colorPrimaryText"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title_feedback"
        android:text="@string/tv_title_feedback"
        android:textColor="@color/colorPrimaryText"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_feedback"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Informe aqui seu feedback"
        android:layout_below="@+id/tv_title_feedback"/>
</LinearLayout>