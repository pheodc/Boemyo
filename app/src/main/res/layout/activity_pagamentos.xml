<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_grey"
    tools:context="br.com.boemyo.Activitys.PagamentosActivity">

    <include android:id="@+id/tb_pagamentos"
        layout="@layout/toolbar"></include>

    <include android:id="@+id/conexao_favoritos"
        layout="@layout/conexao"
        android:visibility="gone"
        ></include>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_pagamentos"
        android:layout_below="@+id/tb_pagamentos"
        android:layout_marginTop="8dp"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
