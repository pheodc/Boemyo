<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.boemyo.Activitys.FavoritoActivity">

    <include android:id="@+id/tb_favoritos"
        layout="@layout/toolbar"/>

    <include android:id="@+id/conexao_favoritos"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_below="@id/tb_favoritos"
        layout="@layout/conexao"
        android:visibility="gone"
        ></include>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_favoritos"
        android:scrollbars="vertical"
        android:id="@+id/rv_favoritos"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
